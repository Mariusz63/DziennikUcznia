@model DziennikUcznia.Models.User

<h2>Edytuj profil użytkownika</h2>

<form asp-action="EditProfile" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Login"></label>
        <input asp-for="Login" class="form-control" disabled />
    </div>

    <!-- Dodaj pozostałe pola, np. Name, LastName, itp. -->


    <div class="form-group">
        <label asp-for="Roles"></label>
        <select asp-for="Roles" class="form-control" asp-items="@(new SelectList(ViewBag.Roles, "Value", "Text"))">
            <option value="">Wybierz rolę</option>
        </select>
        <span asp-validation-for="Roles" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
</form>
