@model NowyDziennik.Models.Class

<h2>Class Details</h2>

<div>
    <h4>Class</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClassName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Teacher.TeacherId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Teacher.TeacherId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.ClassId }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>

<div>
    <h4>Class Subject</h4>
    <p>
        @Html.ActionLink("Add Subject", "Create", "Subjects", new { classId = Model.ClassId }, null)
    </p>

    <!-- Display Class Subject here -->
    <table class="table">
        <tr>
            <th>Subject</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        @foreach (var topic in Model.ClassSubjects)
        {
            <tr>
                <td>@topic.Subject.SubjectName</td>
                <td>@topic.Subject.SubjectDescription</td>
                <td>@Html.ActionLink("Details", "Details", "Subject", new { id = topic.ClassSubjectId }, null)</td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>