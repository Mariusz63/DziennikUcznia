@model NowyDziennik.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="row mb-3">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-3 col-form-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.SecondName, new { @class = "col-md-3 col-form-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.SecondName, new { @class = "form-control" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.PhoneNum, new { @class = "col-md-3 col-form-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.PhoneNum, new { @class = "form-control" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-3 col-form-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>

        @*<div class="form-group row mb-3">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.RoleTaken, new { @class = "col-form-label" })
                </div>
                <div class="col-md-9">
                    @Html.DropDownListFor(m => m.RoleTaken, new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Student", Value = "Student" },
                        new SelectListItem { Text = "Parent", Value = "Parent" },
                        new SelectListItem { Text = "Teacher", Value = "Teacher" },
                        new SelectListItem { Text = "Admin", Value = "Admin" }
                    }, new { @class = "form-control" })
                </div>
            </div>*@

        <div class="form-group row mb-3">
            <div class="col-md-3">
                @Html.LabelFor(m => m.RoleTaken, new { @class = "col-form-label" })
            </div>
            <div class="col-md-9">
                @Html.DropDownListFor(m => m.RoleTaken, new SelectList(Enum.GetValues(typeof(NowyDziennik.Enum.RolesEnum))), "Select Role", new { @class = "form-control" })

            </div>
        </div>


        <div class="row mb-3">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-3 col-form-label" })
            <div class="col-md-9">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 col-form-label" })
            <div class="col-md-9">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="offset-md-3 col-md-9">
                <input type="submit" value="Register" class="btn btn-outline-dark" />
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
