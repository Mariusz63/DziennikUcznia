@model List<NowyDziennik.Models.UserViewModel>

@{
    ViewBag.Title = "All Users";
}

<h2>All Users</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Role</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Role</td>
        </tr>
    }
</table>
