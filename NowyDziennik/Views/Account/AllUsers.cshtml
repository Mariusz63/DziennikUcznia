@model List<NowyDziennik.Models.UserViewModel>

@{
    ViewBag.Title = "All Users";
}

<h2>All Users</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Role</th>
        <th>Email</th>
        <th>Send message</th> 
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Role</td>
            <td>@user.Email</td>
            <td>
                @* Add a link to initiate the messaging process *@
                @Html.ActionLink("Message", "Create", "Messages", new { userId = user.Id }, null)
            </td>
        </tr>
    }
</table>
