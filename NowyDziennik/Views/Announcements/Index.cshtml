@model IEnumerable<NowyDziennik.Models.Announcement>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Content</p>
                    <p class="card-text"><small class="text-muted">@item.DateAdded.ToString("MMMM dd, yyyy")</small></p>

                    @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                    {
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = item.AnnouncementId }, new { @class = "btn btn-primary" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.AnnouncementId }, new { @class = "btn btn-info" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.AnnouncementId }, new { @class = "btn btn-danger" })
                        </p>
                    }
                </div>
            </div>
        </div>
    }
</div>
